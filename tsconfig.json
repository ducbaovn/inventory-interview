{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2024",
    "sourceMap": true,
    "incremental": true,
    "preserveSymlinks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
